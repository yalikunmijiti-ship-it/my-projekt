<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             x:Class="MauiAppMessSkizze.MainPage">

    <VerticalStackLayout Padding="10" Spacing="12">
        <Button Text="Foto wählen" Command="{Binding PickPhotoCommand}" />
        <Button Text="Foto machen" Command="{Binding CapturePhotoCommand}" />
        <Grid>
            <Image x:Name="BackgroundImage"
                   Source="{Binding OriginalImage}"
                   HeightRequest="250"
                   Aspect="AspectFit" />

            <!-- Overlay für Zeichnung -->
            <skia:SKCanvasView x:Name="OverlayCanvas"
                               EnableTouchEvents="True"
                               PaintSurface="OnCanvasViewPaintSurface"
                               Touch="OnCanvasTouch"/>
        </Grid>

        <Label Text="{Binding MeasurementInfo}" 
               FontSize="16" 
               HorizontalOptions="Center"/>
    </VerticalStackLayout>

</ContentPage>
